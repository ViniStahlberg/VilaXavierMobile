<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoPrincipal"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imgCapaDetalhe"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@drawable/fundo_card_img"
            android:contentDescription="Imagem do jogo" />
        <TextView
            android:id="@+id/tvNomeDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Jogo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textPrincipal"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/tvDesenvolvedoraDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desenvolvedora"
            android:textSize="16sp"
            android:textColor="@color/textSecundario"
            android:layout_marginBottom="12dp" />
        <TextView
            android:id="@+id/tvGeneroDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gênero"
            android:textSize="16sp"
            android:textColor="@color/corDestaque"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/tvDescricaoDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição completa do jogo vai aqui."
            android:textSize="15sp"
            android:textColor="@color/textSecundario"
            android:layout_marginBottom="24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btnSteam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Abrir na Steam"
                android:backgroundTint="@color/corDestaque"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />
            <Button
                android:id="@+id/btnWikipedia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Abrir na Wikipedia"
                android:backgroundTint="@color/corDestaqueDark"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
